<body>
    <div class="container" id="intro">
        <h1>Are you looking for the best cheese recipe?</h1>
        <p>Click to reveal the secret of BLU cheese!</p>
        <button onclick="showRickroll()">Reveal Recipe</button>
    </div>
    <div class="container" id="rickroll-container">
        <img id="rickroll" src="https://media.giphy.com/media/Ju7l5y9osyymQ/giphy.gif" alt="Rickroll GIF" onload="console.log('Rickroll GIF loaded')" onerror="console.error('Rickroll GIF failed')">
        <p>Surprise! You got Rickrolled!</p>
        <button id="no-button" onclick="showBrainrot()">NO</button>
    </div>
    <div class="container" id="brainrot-container">
        <img id="brainrot" src="https://media.tenor.com/6tO9l0jSdtQAAAAi/patapim-brr-brr-patapim.gif" alt="Italian Brainrot GIF" onload="console.log('Brainrot GIF loaded')" onerror="showError()">
        <p>Brr Brr Patapim!</p>
        <p id="error-message">Oops, the brainrot GIF failed to load!</p>
    </div>
    <audio id="rickroll-audio" loop>
        <source src="https://www.myinstants.com/media/sounds/rickroll.mp3" type="audio/mpeg">
        Your browser does not support the audio element.
    </audio>
    <audio id="brainrot-audio" loop>
        <source src="https://freesound.org/data/previews/612/612614_5674468-lq.mp3" type="audio/mpeg">
        Your browser does not support the audio element.
    </audio>
    <script>
        function showRickroll() {
            document.getElementById("intro").style.display = "none";
            document.getElementById("rickroll-container").style.display = "block";
            const rickrollAudio = document.getElementById("rickroll-audio");
            rickrollAudio.play().then(() => {
                console.log("Rickroll audio playing");
            }).catch(error => {
                console.error("Rickroll audio failed to play:", error);
            });
            console.log("Rickroll displayed");
        }

        function showBrainrot() {
            document.getElementById("rickroll-container").style.display = "none";
            document.getElementById("brainrot-container").style.display = "block";
            const brainrotAudio = document.getElementById("brainrot-audio");
            document.getElementById("rickroll-audio").pause();
            brainrotAudio.play().then(() => {
                console.log("Brainrot audio playing");
            }).catch(error => {
                console.error("Brainrot audio failed to play:", error);
            });
            console.log("Brainrot displayed");
        }

        function showError() {
            document.getElementById("error-message").style.display = "block";
            console.error("Brainrot GIF failed to load");
        }
    </script>
</body>
